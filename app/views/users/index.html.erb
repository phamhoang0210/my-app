<div class="box">
        <div class="box-header">
          <h3 class="box-title">Data Table With Users</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
            <div class="row">
              <div class="col-md-12">
                <button type="button" class="btn btn-info"><%= link_to "Create", new_user_path %></button>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-12">
               <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                <thead>
                <tr role="row">
                  <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 275px;">STT
                  </th>
                  <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 345px;">Name</th>
                  <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 317px;">Email</th>
                  <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 180px;">updated_at</th>
                  <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 180px;">created_at</th>
                  <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 180px;">option_at</th>
                </tr>
                </thead>
                <tbody>
                    <% @users.each do |user| %>
                    <tr role="row" class="odd">
                      <td class="sorting_1"><%= @stt+=1 %></td>
                      <td><%= user.name %></td>
                      <td><%= user.email %></td>
                      <td><%= user.created_at %></td>
                      <td><%= user.updated_at %></td>
                      <td><button type="button" class="btn btn-info"><%= link_to "show", user %></button>
                          <button type="button" class="btn btn-warning"><%= link_to "Edit", edit_user_path(user) %>
                          </button>
                          <button type="button" class="btn btn-danger"><%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" } %>
                          </button>
                      </td>
                    </tr>
                    <% end %>
               </tbody>
              </table></div></div>
            </div>
          </div>
                <!-- /.box-body -->
  </div>
